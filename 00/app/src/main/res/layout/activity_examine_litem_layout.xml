<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/activity_examline_litem_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:padding="10dp">

            <TextView
                android:id="@+id/activity_examline_litem_layout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空腹血糖"
                android:textColor="@color/colorBlank"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activity_examline_litem_layout_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:background="@color/green_end"
                android:text="  正常：空腹血糖在3.9-6.1mmol/L。  " />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/activity_examline_litem_layout_normal"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow_right_gray" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>