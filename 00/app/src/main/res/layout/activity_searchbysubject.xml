<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context="com.liang.virtualdoctor.ui.activitys.SearchActivity">
    <include layout="@layout/toolbar_layout" android:id="@+id/search_toolbar"/>

    <LinearLayout
        android:layout_below="@id/search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <fragment
            android:name="com.liang.virtualdoctor.fragments.SubjectFragment"
            android:id="@+id/frag_search_subject"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"/>
        <fragment
            android:id="@+id/frag_search_itemsubject"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:name="com.liang.virtualdoctor.fragments.SubjectItemFragment"
            android:layout_height="match_parent"/>

    </LinearLayout>





</RelativeLayout>
