<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liang.virtualdoctor.ui.activitys.HealthHelperActivity">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:id="@+id/rl_helper_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/helper_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/arrow_left_black"/>
            <TextView
                android:layout_toRightOf="@+id/helper_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:text="返回"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家庭健康助手"
            android:textColor="@color/blacktextcolor"
            android:textSize="20sp"
            android:layout_marginLeft="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/helper_iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_add"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_top_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/health_helper_top_bg"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_home_relationship"/>
        <ImageView
            android:id="@+id/helper_empty_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="160dp"
            android:src="@drawable/health_helper_empty_head"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="自己"/>
        <TextView
            android:id="@+id/helper_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/helper_empty_head"
            android:text="编辑资料"/>
        <TextView
            android:id="@+id/helper_add"
            android:layout_below="@+id/helper_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="添加成员，输入年龄性别"/>
        <TextView
            android:layout_below="@+id/helper_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="半个医生帮你分析每个年龄段需要预防的疾病！"/>
        <ImageView
            android:layout_below="@+id/iv_top_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/health_helper_bottom_bg_unlogin"/>
    </RelativeLayout>

</RelativeLayout>
